<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rchowe.thedeck.MainActivity" >

    <TextView
        android:id="@+id/cardTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/drawButton"
        android:layout_below="@+id/drawButton"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="24sp"
        android:textColorHint="@android:color/primary_text_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cardTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardTitleView"
        android:layout_below="@+id/cardTitleView"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="20sp"
        android:textColorHint="@android:color/primary_text_light" />

    <TextView
        android:id="@+id/cardFlavortextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardTextView"
        android:layout_below="@+id/cardTextView"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#555"
        android:textSize="18sp"
        android:textColorHint="@android:color/secondary_text_light"
        android:textStyle="italic" />
    
    <Button
        android:id="@+id/drawButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="#428bca"
        android:onClick="drawCard"
        android:text="@string/draw_card"
        android:textColor="#fff" />

</RelativeLayout>